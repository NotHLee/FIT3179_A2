{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1270,
    "height": 445,
    "projection": {
        "type": "mercator",
        "center": [109.5, 4],
        "scale": 3635
    },
    "params": [
        {
            "name": "time_select",
            "value": 9
        },
        {
            "name": "selected_state",
            "value": null
        }
    ],
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#cbe5fc",
                "stroke": null
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [2, 2]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "white",
                "strokeWidth": 1,
                "opacity": 0.7
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "MYSADM1gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 1.5
            },
           
            "encoding": {
                "color": {
                    "value": "#e8e8e8"
                },
                "opacity": {
                    "condition": {
                        "test": "(datum.properties.shapeName == selected_state) || (datum.properties.shapeName == 'Malacca' && selected_state == 'Melaka') || (datum.properties.shapeName == 'Penang' && selected_state == 'Pulau Pinang') || ((datum.properties.shapeName == 'Kuala Lumpur' || datum.properties.shapeName == 'Putrajaya' || datum.properties.shapeName == 'Labuan') && selected_state == 'Wilayah Persekutuan') || selected_state == null",
                        "value": 1
                    },
                    "value": 0.3
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "PHLADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "THAADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "IDNADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/APIMS-monthly-by-station.csv"
            },
            "transform": [
                {
                    "filter": "year(datum.date) == (floor(time_select / 12) + 2005) && month(datum.date) == (time_select % 12)"
                },
                {
                    "filter": "selected_state == null || datum.state == selected_state"
                }
            ],
            "mark": {
                "type": "circle",
                "size": 100,
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "lon",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "lat",
                    "type": "quantitative"
                },
                "color": {
                    "field": "aqi",
                    "title": "Air Quality Index (AQI)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "orangered",
                        "domain": [0, 100]
                    },
                    "legend": {
                        "tickCount": 7
                    }
                },
                "tooltip": [
                    {
                        "field": "station",
                        "type": "nominal",
                        "title": "Location"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    },
                    {
                        "field": "lat",
                        "type": "quantitative",
                        "title": "Latitude"
                    },
                    {
                        "field": "lon",
                        "type": "quantitative",
                        "title": "Longitude"
                    },
                    {
                        "field": "date",
                        "type": "nominal",
                        "title": "Date"
                    }
                ]
            }
        }
    ]
}