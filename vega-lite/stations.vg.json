{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Air Quality Across Malaysia (2005 - 2022)",
    "background": null,
    "width": 1270,
    "height": 445,
    "projection": {
        "type": "mercator",
        "center": [
            109.5,
            4
        ],
        "scale": 3635
    },
    "params": [
        {
            "name": "time_select",
            "value": 9
        },
        {
            "name": "selected_state",
            "value": null
        }
    ],
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#cbe5fc",
                "stroke": null
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [
                        2,
                        2
                    ]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "white",
                "strokeWidth": 1,
                "opacity": 0.7
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "THAADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "opacity": {
                    "condition": {
                        "test": "datum.state != selected_state && selected_state != null",
                        "value": 0.3
                    },
                    "value": 1
                }   
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "IDNADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "opacity": {
                    "condition": {
                        "test": "datum.state != selected_state && selected_state != null",
                        "value": 0.3
                    },
                    "value": 1
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/choropleth.geojson",
                "format": {
                    "type": "json",
                    "property": "features"
                }
            },
            "mark": {
                "type": "geoshape",
                "strokeWidth": 1.5,
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "value": "#e8e8e8"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.state != selected_state && selected_state != null",
                        "value": 0.3
                    },
                    "value": 1
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/APIMS-monthly-avg-by-state.csv",
                "format": {
                    "type": "csv"
                }
            },
            "transform": [
                {
                    "filter": "year(datum.date) == (floor(time_select / 12) + 2005) && month(datum.date) == (time_select % 12)"
                },
                {
                    "lookup": "shapeISO",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/choropleth.geojson",
                            "format": {
                                "type": "json",
                                "property": "features"
                            }
                        },
                        "key": "properties.shapeISO"
                    },
                    "as": "geo"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 1.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "aqi",
                    "title": "AQI",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "orangered",
                        "domain": [0,100]
                    },
                    "legend": {
                        "tickCount": 7
                    }
                },
                "opacity": {
                    "condition": {
                        "test": "datum.state != selected_state && selected_state != null",
                        "value": 0.3
                    },
                    "value": 1
                },
                "tooltip": [
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    },
                    {
                        "field": "date",
                        "type": "nominal",
                        "title": "Date"
                    }
                ]
            }
        }
    ]
}