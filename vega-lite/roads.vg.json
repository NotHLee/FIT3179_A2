{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 770,
    "height": 270,
    "projection": {
        "type": "mercator",
        "center": [109.5, 4],
        "scale": 2200
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#cbe5fc",
                "stroke": null
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [2, 2]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "white",
                "strokeWidth": 1,
                "opacity": 0.7
            }
        },
        {
            "data": {
                "url": "../data/map/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "MYSADM1gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#e8e8e8",
                "stroke": "white",
                "strokeWidth": 1.5
            }
        },
        {
            "data": {
                "url": "../data/map/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "PHLADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "../data/map/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "THAADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "../data/map/geoBoundaries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "IDNADM0gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "../data/map/roads/Ipoh-Kampar.geojson",
                "format": {
                    "type": "json",
                    "property": "features"
                }
            },
            "transform": [
                {
                    "filter": "datum.geometry.type == 'LineString'"
                },
                {
                    "calculate": "'Ipoh-Kampar'",
                    "as": "location"
                },
                {
                    "lookup": "location",
                    "from": {
                        "data": {
                            "url": "../data/traffic/road_data.csv"
                        },
                        "key": "Location",
                        "fields": ["ADT", "Station", "Route", "Route Name"]
                    }
                },
                {
                    "calculate": "toNumber(replace(datum.ADT, ',', ''))",
                    "as": "ADT_numeric"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": null,
                "strokeWidth": 2,
                "opacity": 0.8
            },
            "encoding": {
                "stroke": {
                    "field": "ADT_numeric",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "orangered"
                    },
                    "legend": {
                        "title": "Average Daily Traffic"
                    }
                },
                "tooltip": [
                    {"field": "location", "type": "nominal", "title": "Road"},
                    {"field": "ADT_numeric", "type": "quantitative", "title": "Average Daily Traffic", "format": ","},
                    {"field": "Station", "type": "nominal", "title": "Station"},
                    {"field": "Route", "type": "nominal", "title": "Route"},
                    {"field": "Route Name", "type": "nominal", "title": "Route Name"}
                ]
            }
        },
        {
            "data": {
                "url": "../data/map/roads/Ipoh-Lumut.geojson",
