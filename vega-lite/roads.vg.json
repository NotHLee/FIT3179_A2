{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "title": "Top 10 Busiests Roads in Peninsular Malaysia (2015 - 2022)",
    "background": null,
    "projection": {
        "type": "mercator",
        "center": [102, 4],
        "scale": 4000
    },
    "params": [
        {
            "name": "year_select",
            "value": "2015",
            "bind": {
                "input": "select",
                "options": [
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022",
                    "2023",
                    "2024"
                ],
                "labels": [
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022",
                    "2023",
                    "2024"
                ],
                "name": "Year select: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#cbe5fc",
                "stroke": null
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [2, 2]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "white",
                "strokeWidth": 1,
                "opacity": 0.7
            }
        },
        {
            "data": {
                "url": "../data/map/malaysia only.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "MYSADM1gbOpen"
                }
            },
            "mark": {   
                "type": "geoshape",
                "fill": "darkslategray",
                "stroke": "white",
                "strokeWidth": 1.5
            }
        },
        {
            "data": {
                "url": "../data/map/merged_traffic_roads.geojson",
                "format": {"type": "json", "property": "features"}
            },
             "transform": [
                {"filter": "datum.properties.Year == year_select"},
                {"filter": "datum.properties.rank <= 10"}
            ],
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "orange",
                "strokeWidth": 3
            },
            "encoding": {
                "stroke": {
                    "field": "properties.ADT",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [39894, 71954, 112099, 147756, 211188],
                        "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026", "#800026"]
                    },
                    "title": "Average Daily Traffic"
                },
                "tooltip": [
                    {
                        "field": "properties.Year",
                        "type": "nominal",
                        "title": "Year"
                    },
                    {
                        "field": "properties.Location",
                        "type": "nominal",
                        "title": "Road"
                    },
                    {
                        "field": "properties.ADT",
                        "type": "quantitative",
                        "title": "ADT"
                    },
                    {
                        "field": "properties.rank",
                        "type": "quantitative",
                        "title": "Rank"
                    }
                ]
            }
        }
    ]
}

