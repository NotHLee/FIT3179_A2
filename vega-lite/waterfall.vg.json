{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "../data/api/aqi_forest_malaysia.csv",
    "format": {"type": "csv"}
  },
  "background": null,
  "width": 800,
  "height": 450,
  "title": "Air Quality Index Change in Malaysia (2005-2022)",
  "transform": [
    {"window": [{"op": "sum", "field": "aqi_change", "as": "sum"}]},
    {"window": [{"op": "lead", "field": "year", "as": "lead"}]},
    {
      "calculate": "datum.lead === null ? datum.year : datum.lead",
      "as": "lead"
    },
    {
      "calculate": "datum.year === 'End' ? 0 : datum.sum - datum.aqi_change",
      "as": "previous_sum"
    },
    {
      "calculate": "datum.year === 'End' ? datum.sum : datum.aqi_change",
      "as": "amount"
    },
    {
      "calculate": "(datum.year !== 'Begin' && datum.year !== 'End' && datum.aqi_change > 0 ? '+' : '') + datum.aqi_change",
      "as": "text_amount"
    },
    {"calculate": "(datum.sum + datum.previous_sum) / 2", "as": "center"}
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "sort": null,
      "axis": {"labelAngle": 0, "title": "Year"}
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "size": 45},
      "encoding": {
        "y": {
          "field": "previous_sum",
          "type": "quantitative",
          "title": "AQI"
        },
        "y2": {"field": "sum"},
        "color": {
          "condition": [
            {
              "test": "datum.year === 'Begin' || datum.year === 'End'",
              "value": "#f7e0b6"
            },
            {"test": "datum.sum < datum.previous_sum", "value": "#93c4aa"}
          ],
          "value": "#f78a64"
        },
        "tooltip": [
          {
            "field": "sum",
            "type": "quantitative",
            "title": "AQI"
          },
          {
            "field": "amount",
            "type": "quantitative",
            "title": "Difference"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#404040",
        "opacity": 1,
        "strokeWidth": 2,
        "xOffset": -22.5,
        "x2Offset": 22.5
      },
      "encoding": {
        "x2": {"field": "lead"},
        "y": {"field": "sum", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "text", "dy": {"expr": "datum.aqi_change >= 0 ? -4 : 4"}, "baseline": {"expr": "datum.aqi_change >= 0 ? 'bottom' : 'top'"}},
      "encoding": {
        "y": {"field": "sum", "type": "quantitative"},
        "text": {"field": "sum", "type": "quantitative", "format": ".2f"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold", "baseline": "middle"},
      "encoding": {
        "y": {"field": "center", "type": "quantitative"},
        "text": {"field": "text_amount", "type": "nominal"},
        "color": {
          "condition": [
            {
              "test": "datum.year === 'Begin' || datum.year === 'End'",
              "value": "#725a30"
            }
          ],
          "value": "white"
        }
      }
    },
    {   
            "data": {
                "values":[{}]
            },
            "mark": {"type": "rule", "color": "lightslategrey", "strokeWidth": 2, "strokeDash": [8, 4]},
            "encoding": {
                "x": {
                    "datum": "2009",
                    "type": "nominal"
                }
            }
        },
        {   
            "data": {
                "values":[{}]
            },
            "mark": {"type": "rule", "color": "lightslategrey", "strokeWidth": 2, "strokeDash": [8, 4]},
            "encoding": {
                "x": {
                    "datum": "2016",
                    "type": "nominal"
                }
            }
        }
  ],
  "config": {"text": {"fontWeight": "bold", "color": "#404040"}}
}