{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "title": "State ranking by AQI",
    "data": {
        "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/APIMS-monthly-avg-by-state.csv",
        "format": {
            "type": "csv"
        }
    },
    "width": 350,
    "height": 290,
    "params": [
        {
            "name": "time_select",
            "value": 9
        },
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "pointerover"
            }
        },
        {
            "name": "selected_state",
            "select": {
                "type": "point",
                "fields": ["state"],
                "on": "click"
            },
            "value": null
        }
    ],
    "transform": [
        {
            "filter": "datum.state != 'Malaysia'"
        },
        {
            "filter": "year(datum.date) == (floor(time_select / 12) + 2005) && month(datum.date) == (time_select % 12)"
        },
        {"calculate": "toNumber(datum.aqi)", "as": "Aqi"}
    ],
    "mark": {
        "type": "bar",
        "color": "orangered",
        "opacity": 0.75,
        "stroke": "black",
        "cursor": "pointer"
    },
    "encoding": {
        "y": {
            "field": "state",
            "type": "nominal",
            "axis": {
                "labelAngle": 0,
                "title": null
            },
            "sort": {
                "field": "Aqi",
                "op": "mean",
                "order": "descending"
            }
        },
        "x": {
            "field": "Aqi",
            "type": "quantitative",
            "scale": {
                "domain": [0, 130]
            }
        },
        "fillOpacity": {
            "condition": {"param": "selected_state", "value": 1},
            "value": 0.3
        },
        "strokeWidth": {
            "condition": [
                {
                    "param": "selected_state",
                    "empty": false,
                    "value": 2
                },
                {
                    "param": "highlight",
                    "empty": false,
                    "value": 1
                }
            ],
            "value": 0
        },
        "tooltip": [
            {
                "field": "state",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "aqi",
                "type": "quantitative",
                "title": "AQI"
            }
        ]
    },
    "config": {
        "scale": {
            "bandPaddingInner": 0.2
        }
    }
}