{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "data": {
        "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_data/refs/heads/main/APIMS-monthly-avg-by-state.csv"
    },
    "background": null,
    "title": "Air Quality Over Time (2005 - 2022)",
    "params": [
        {
            "name": "selected_state",
            "value": null
        },
        {
            "name": "time_select",
            "value": 9
        }
    ],
    "transform": [
        {"filter": "(selected_state == null && datum.state == 'Malaysia') || datum.state == selected_state"},
        {
            "calculate": "datetime((floor(time_select / 12) + 2005), (time_select % 12), 1)",
            "as": "selected_date"
        },
        {
            "aggregate": [{
            "op": "mean",
            "field": "aqi",
            "as": "mean_aqi"
            }],
            "groupby": ["shapeiso", "date", "state"]
        }
    ],
    "width": 1270,
    "height": 290,
    "layer": [
        {
            "mark": {
                "type": "area",
                "line": {
                    "color": "orange"
                },
                "color": {
                    "x1": 1,
                    "y1": 1,
                    "x2": 1,
                    "y2": 0,
                    "gradient": "linear",
                    "stops": [
                        {
                            "offset": 0,
                            "color": "white"
                        },
                        {
                            "offset": 1,
                            "color": "orangered"
                        }
                    ]
                }
            },
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "temporal",
                    "title": null
                },
                "y": {
                    "field": "mean_aqi",
                    "type": "quantitative",
                    "scale": {
                        "domain": [0, 130]
                    },
                    "axis": {
                        "title": "AQI"
                    }
                },
                "tooltip": [
                    {
                        "field": "mean_aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    },
                    {
                        "field": "date",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": -2,
                "dy": 0,
                "fontSize": 12,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {
                    "datum": {"year": 2016, "month": 4},
                    "type": "temporal"
                },
                "y": {
                    "datum": 45,
                    "type": "quantitative"
                },
                "text": {
                    "value": "Missing Data"
                },
                "color": {
                    "value": "gray"
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 4,
                "dy": -72,
                "fontSize": 14,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {
                    "datum": {"year": 2006, "month": 9},
                    "type": "temporal"
                },
                "y": {
                    "datum": 90,
                    "type": "quantitative"
                },
                "text": {
                    "value": ["2006 Southeast Asian", "haze"]
                },
                "color": {
                    "value": "orangered"
                }
            }
        },
        {
            "mark": {"type": "rule", "color": "orangered", "strokeWidth": 0.1, "strokeDash": [8, 4]},
            "encoding": {
                "x": {
                    "datum": {"year": 2006, "month": 10},
                    "type": "temporal"
                },
                "y": {
                    "datum": 110,
                    "type": "quantitative"
                },
                "opacity": {
                    "value": 0.05
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 0,
                "dy": -72,
                "fontSize": 14,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {
                    "datum": {"year": 2013, "month": 6},
                    "type": "temporal"
                },
                "y": {
                    "datum": 90,
                    "type": "quantitative"
                },
                "text": {
                    "value": ["2013 Southeast Asian", "haze"]
                },
                "color": {
                    "value": "orangered"
                }
            }
        },
        {
            "mark": {"type": "rule", "color": "orangered", "strokeWidth": 0.1, "strokeDash": [8, 4]},
            "encoding": {
                "x": {
                    "datum": {"year": 2013, "month": 6},
                    "type": "temporal"
                },
                "y": {
                    "datum": 110,
                    "type": "quantitative"
                },
                "opacity": {
                    "value": 0.1
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 0,
                "dy": -72,
                "fontSize": 14,
                "fontWeight": "normal"
            },
            "encoding": {
                "x": {
                    "datum": {"year": 2019, "month": 9},
                    "type": "temporal"
                },
                "y": {
                    "datum": 90,
                    "type": "quantitative"
                },
                "text": {
                    "value": ["2019 Southeast Asian", "haze"]
                },
                "color": {
                    "value": "orangered"
                }
            }
        },
        {
            "mark": {"type": "rule", "color": "orangered", "strokeWidth": 0.1, "strokeDash": [8, 4]},
            "encoding": {
                "x": {
                    "datum": {"year": 2019, "month": 9},
                    "type": "temporal"
                },
                "y": {
                    "datum": 110,
                    "type": "quantitative"
                },
                "opacity": {
                    "value": 0.1
                }
            }
        },
        {
            "mark": {"type": "rule", "color": "gray", "strokeWidth": 0.1, "strokeDash": [4, 2]},
            "encoding": {
                "x": {
                    "field": "selected_date",
                    "type": "temporal"
                }
            }
        }
    ]
}