{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A radar chart example, showing multiple dimensions in a radial layout.",
  "width": 500,
  "height": 500,
  "padding": 40,
  "autosize": {"type": "none", "contains": "padding"},

  "signals": [
    {"name": "radius", "update": "width / 2"}
  ],

  "data": [
    {
        "name": "table",
        "url": "../data/pollutants/air_pollution_yearly.csv",
        "format": {"type":"csv"},
        "transform": [
          {
            "type": "filter",
            "expr": "datum.year >= 2018"
          }
        ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["pollutant"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "pollutant"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": [0, 150],
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "year"},
      "range": {"scheme": "category10"}
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "This is the Title",
      "orient": "top-right",
      "encode": {
        "symbols": {"enter": {"fillOpacity": {"value": 0.5}}},
        "labels": {"update": {"text": {"field": "value"}}}
      }
    }
  ],
  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },
  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["year"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.percentage) * cos(scale('angular', datum.pollutant))"},
              "y": {"signal": "scale('radial', datum.percentage) * sin(scale('angular', datum.pollutant))"},
              "stroke": {"scale": "color", "field": "year"},
              "strokeWidth": {"value": 1},
              "fill": {"scale": "color", "field": "year"},
              "fillOpacity": {"value": 0.1}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid-150",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.pollutant))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.pollutant))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "rule",
      "name": "radial-grid-100",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "(radius * 2/3) * cos(scale('angular', datum.pollutant))"},
          "y2": {"signal": "(radius * 2/3) * sin(scale('angular', datum.pollutant))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "rule",
      "name": "radial-grid-50",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "(radius * 1/3) * cos(scale('angular', datum.pollutant))"},
          "y2": {"signal": "(radius * 1/3) * sin(scale('angular', datum.pollutant))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 5) * cos(scale('angular', datum.pollutant))"},
          "y": {"signal": "(radius + 5) * sin(scale('angular', datum.pollutant))"},
          "text": {"field": "pollutant"},
          "align": [
            {
              "test": "abs(scale('angular', datum.pollutant)) > PI / 2",
              "value": "right"
            },
            {
              "value": "left"
            }
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.pollutant) > 0", "value": "top"
            },
            {
              "test": "scale('angular', datum.pollutant) == 0", "value": "middle"
            },
            {
              "value": "bottom"
            }
          ],
          "fill": {"value": "black"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line-150",
      "from": {"data": "radial-grid-150"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line-100",
      "from": {"data": "radial-grid-100"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "red"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line-50",
      "from": {"data": "radial-grid-50"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    }
  ]
}
